.goods-item{
  padding: 20rpx;
  display: flex;
  justify-content: space-around;
  width: 750rpx;
  height: 260rpx;
  border-bottom: 1px solid #e9e9e9;
  font-size: 16px;
  color: #333;
}
.item-img{
  border-radius: 5%;
  min-width: 260rpx;
  height: 100%;
  background-size: cover;
  background-position: center;
  background-repeat: no-repeat; 
}
.content{
  min-width: 58%;
  height: 100%;
}
.no-goods{
  height: 40px;
  font-size: 14px;
  line-height: 40px;
  color: #666;
  text-align: center;
  margin-top: 50px;
}
.flash{
  height: 40px;
  font-size: 14px;
  line-height: 40px;
  color: #09bb07;
  text-align: center;
  margin-top: 50px;
}