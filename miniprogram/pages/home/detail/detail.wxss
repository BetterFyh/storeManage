/* miniprogram/pages/home/detail/detail.wxss */
.img{
  width: 100%;
  height: 500rpx;
  background-repeat: no-repeat;
  background-position: center;
  background-size: cover;
}
.info{
  padding:20rpx 30rpx;
  font-size: 16px;
  color: #333;
}
.qrcode{
  width: 750rpx;
  height: 300rpx;
  margin-top: 30rpx;
  background-repeat: no-repeat;
  background-position: center;
  background-size: contain;
  margin-bottom: 100rpx;
}
.btn{
  position: fixed;
  bottom: 0;
  left: 0;
  background:  linear-gradient(to right, #00ddcc,#09bb07);
  color: #fff;
  width: 750rpx;
  height: 92rpx;
  line-height: 92rpx;
  text-align: center;
  font-size: 16px;
}
.user {
  background-color: rgba(200, 200, 200, 0.8);
  width: 100%;
  height: 90rpx;
  display: flex;
  border-bottom: 1rpx solid #e7e7e7;
}

.user label {
  width: 20%;
  text-align: right;
  line-height: 90rpx;
}

.user input {
  height: 100%;
  width: 80%;
  line-height: 90rpx;
  padding-left: 30rpx;
}